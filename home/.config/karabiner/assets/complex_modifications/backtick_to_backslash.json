{
  "title": "Backtick to Backslash",
  "rules": [
    {
      "description": "Remap ` to \\ and ~ to |",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "grave_accent_and_tilde" },
          "to": [ { "key_code": "backslash" } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "grave_accent_and_tilde", "modifiers": { "mandatory": ["shift"] } },
          "to": [ { "key_code": "backslash", "modifiers": ["shift"] } ]
        }
      ]
    }
  ]
}
