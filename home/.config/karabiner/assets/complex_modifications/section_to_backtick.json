{
  "title": "Section to Backtick",
  "rules": [
    {
      "description": "Remap § to ` and ± to ~",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "section" },
          "to": [ { "key_code": "grave_accent_and_tilde" } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "section", "modifiers": { "mandatory": ["shift"] } },
          "to": [ { "key_code": "grave_accent_and_tilde" } ]
        }
      ]
    }
  ]
}
