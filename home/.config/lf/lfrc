set ifs "\n"
set shellopts '-eu'
set shell bash
set scrolloff 10

map e $$EDITOR "$f"
map w $$BROWSER "$f" & disown
map i $$PAGER "$f"
map x $$f
map X !$f
#map o &mimeopen $f
#map O $mimeopen --ask $f
map D :delete <enter>
map R :bulkrename <enter>
map <esc> quit
map <enter> shell

# dedicated keys for file opener actions

cmd bulkrename ${{
	tmpfile=$(mktemp)
	echo "$fx" > $tmpfile
    echo $tmpfile > /tmp/log
	qmv -d --format=do $(cat $tmpfile)
}}
