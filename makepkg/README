- no signing for now

REPOSITORY=/usr/local/pacman

- check:
	pacman -Qi <pkg>

- build:
	1. copy control:files/<pkg> host:$TEMP_DIR
	2. makepkg \
		--force \
		--syncdeps \
		--rmdeps \
		--clean \
		--cleanbuild \
		--nocolor \
		--dir $TEMP_DIR
	3. mv ${TEMP_DIR}/*.pkg.tar.zst ${REPOSITORY}/

- update: 
	1. repo-add ${REPOSITORY}/packages.db.tar.zst ${REPOSITORY}/*.pkg.tar.zst --new

ansible/
	files/
		pacman/
			lazydocker/
				PKGBUILD
				...

control:~/.dotfiles
├── ansible.cfg
└── files
    └── pacman
        └── neovim
            └── PKGBUILD

host:/usr/local/pacman/
├── neovim-fork-0.10.2-1-x86_64.pkg.tar.zst
├── packages.db -> packages.db.tar.zst
├── packages.db.tar.zst
├── packages.files -> packages.files.tar.zst
└── packages.files.tar.zst
