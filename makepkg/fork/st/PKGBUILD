# shellcheck disable=all
#
# NOTE: Run `tic -sx /usr/share/st/st.info` if colors seem weird on nvim/tmux

pkgname=st-fork
pkgver=0.8.r13.3b04a65
pkgrel=1
pkgdesc='A simple virtual terminal emulator for X (patched fork)'
arch=('x86_64')
license=('MIT')
depends=('libx11' 'libxft' 'freetype2' 'fontconfig')
options=('!debug')
conflicts=('st')
url="https://github.com/brenopacheco/st"
source=('git+ssh://git@github.com/brenopacheco/st-fork.git')
md5sums=('SKIP')

pkgver() {
	make -s -C "$pkgname" version
}

build() {
	make -C "$pkgname"
}

package() {
	DESTDIR="$pkgdir" make -C "$pkgname" install
}
