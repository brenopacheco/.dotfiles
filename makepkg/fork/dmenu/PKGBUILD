# shellcheck disable=all

pkgname=dmenu-fork
pkgver=5.2.r14.ccd6a7e
pkgrel=1
pkgdesc='Generic menu for X (dmenu) fork'
url='https://github.com/brenopacheco/dmenu-fork'
arch=(x86_64)
license=(MIT)
options=('!debug')
depends=('libx11' 'libxinerama' 'libxft' 'freetype2')
conflicts=('dmenu')
provides=('dmenu')
source=('git+ssh://git@github.com/brenopacheco/dmenu-fork.git')
md5sums=('SKIP')

pkgver() {
	make -s -C "$pkgname" version
}

build() {
	make -C "$pkgname"
}

package() {
	DESTDIR="$pkgdir" make -C "$pkgname" install
}
