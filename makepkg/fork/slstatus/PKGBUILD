# shellcheck disable=all

pkgname=slstatus-fork
pkgver=1.0.r8.074d551
pkgrel=1
pkgdesc="A status monitor for window managers fork"
url="https://github.com/brenopacheco/slstatus-fork"
arch=(x86_64)
license=('MIT')
options=('!debug')
depends=('libx11')
conflicts=('slstatus')
provides=('slstatus')
source=('git+ssh://git@github.com/brenopacheco/slstatus-fork.git')
md5sums=('SKIP')

pkgver() {
	make -s -C "$pkgname" version
}

build() {
	make -C "$pkgname"
}

package() {
	DESTDIR="$pkgdir" make -C "$pkgname" install
}
