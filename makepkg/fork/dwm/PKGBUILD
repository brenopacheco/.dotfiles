# shellcheck disable=all

pkgname=dwm-fork
pkgver=6.5.r34.d0297c1
pkgrel=1
pkgdesc='Dynamic window manager (dwm) fork'
url='https://github.com/brenopacheco/dwm-fork'
arch=(x86_64)
license=('MIT')
options=('!debug')
depends=('libx11' 'libxinerama' 'libxft' 'freetype2')
conflicts=('dwm' 'xdg-desktop-portal-gnome')
provides=('dwm')
source=('git+ssh://git@github.com/brenopacheco/dwm-fork.git')
md5sums=('SKIP')

pkgver() {
	make -s -C "$pkgname" version
}

build() {
	make -C "$pkgname"
}

package() {
	DESTDIR="$pkgdir" make -C "$pkgname" install
}
