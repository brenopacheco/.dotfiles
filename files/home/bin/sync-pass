#!/usr/bin/env bash
# sync pass passwords into dotfiles

DIR=$HOME/.passwords
REPO=https://github.com/brenopacheco/.passwords.git


if [[ ! -d "$DIR" ]]; then
	mkdir -p $DIR
fi

if [[ ! -d "$DIR/.git" ]]; then
	git clone $REPO $DIR
fi


rm $HOME/.passwords/pass.tar.gz.asc
tar -cz $HOME/.password-store | gpg -ea -o $HOME/.passwords/pass.tar.gz.asc

if [[ $? -eq 0 ]]; then
	cd $DIR 
	git add -A 
	git commit -m "$(date)"
	git push
fi
