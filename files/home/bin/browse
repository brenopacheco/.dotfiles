#!/bin/bash

BROWSER="$(xdg-settings get default-web-browser | sed 's/\.desktop//')"
URL="https://google.com"

chromium --new-window "$URL"
exit 0

if pgrep -x "$BROWSER" > /dev/null; then
	WINDOW_ID=$(xdotool search --maxdepth 1 --onlyvisible --class "$BROWSER")
    xdotool windowactivate ${WINDOW_ID}
else
    xdg-open "$URL"
fi

# to change the tag, we need to apply ewhm patch to dwm
# CURRENT_TAG=$(xprop -id $(xprop -root _NET_ACTIVE_WINDOW | awk '{print $NF}') _NET_WM_DESKTOP | awk '{print $NF}')
# echo $CURRENT_TAG
# echo "xdotool set_desktop_for_window $WINDOW_ID $CURRENT_TAG"
