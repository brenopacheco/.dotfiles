# shellcheck disable=all

pkgname=('fnlfmt')
pkgver=0.3.1.r115.2e1d288
pkgrel=1
pkgdesc="A formatter for Fennel code"
arch=('x86_64')
url="https://git.sr.ht/~technomancy/fnlfmt"
license=("MIT")

source=("git+https://git.sr.ht/~technomancy/fnlfmt#commit=HEAD")

md5sums=('SKIP')

pkgver() {
	cd $pkgname
	printf "0.3.1.r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
	cd $pkgname
	make
}

package() {
	cd $pkgname
	install -Dm755 "./$pkgname" "${pkgdir}/usr/bin/$pkgname"
	mkdir -p "$pkgdir/usr/share/licenses/$pkgname"
    install -Dm644 "LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
