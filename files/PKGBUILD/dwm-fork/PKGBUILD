# - update to 6.4
# - remove bstrack, bstackhoriz
# - find a way to move gtk settings and cursor theme here

pkgname=dwm-fork
pkgver=6.1
pkgrel=6
pkgdesc="Dynamic window manager (dwm) fork"
url="https://github.com/brenopacheco/dwm"
arch=(x86_64)
license=('MIT')
options=(zipman)
depends=('dmenu' 'libx11' 'libxinerama' 'libxft' 'freetype2' 'yajl'
	'ttf-firacode-nerd')
conflicts=('dwm')
# 'xdg-desktop-portal-gnome')

source=("dwm.desktop"
	"git+https://github.com/brenopacheco/dwm-fork.git#commit=HEAD")

md5sums=('SKIP' 'SKIP')

build() {
	cd dwm-fork
	make X11INC=/usr/include/X11 X11LIB=/usr/lib
}

package() {
	cd dwm-fork
	make PREFIX=/usr DESTDIR="$pkgdir" install
	install -m644 -D LICENSE "$pkgdir/usr/share/licenses/dwm/LICENSE"
	install -m644 -D ../dwm.desktop "$pkgdir/usr/share/xsessions/dwm.desktop"
}
