      "# - Authorization",
      "# - Body",
      "# ",
      "# > Examples",
      "# GET https://reqres.in/api/users?page=5",
      "#",
      "# DELETE https://reqres.in/api/users/2",
      "#",
      "# POST {{URL}}",
      "# Content-Type: application/json",
      "# Authorization: Bearer {{TOKEN}}",
      "# {",
      "#     \"userid\" : \"{{\\$uuid}}\",",
      "#     \"job\": \"leader\",",
      "#     \"array\": [\"a\", \"b\", \"c\"],",
      "#     \"object\": {",
      "#       \"key\": \"value\"",
      "#     }",
      "# }",
      "#",
      "# PATCH https://reqres.in/api/users/2",
      "# Content-Type: application/json",
      "# < ./user.json"
