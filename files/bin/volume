#!/usr/bin/env bash
# increase decrease or mute volume using pulseaudio

usage() {
    echo -e "Usage:"
    echo -e "\tvolume inc"
    echo -e "\tvolume dec"
    echo -e "\tvolume mute"
    echo -e "\tvolume toggle"
}

ARG="$1"

case $ARG in
    inc|increase)
        pactl set-sink-mute 0 false
        pactl set-sink-volume 0 +3%
        ;;
    dec|decrease)
        pactl set-sink-mute 0 false
        pactl set-sink-volume 0 -3%
        ;;
    mute)
        pactl set-sink-mute 0 true
        ;;
    toggle)
        pactl set-sink-mute 0 toggle
        ;;
    *)
        usage
        ;;
esac
